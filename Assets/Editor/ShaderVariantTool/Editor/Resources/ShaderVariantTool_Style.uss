.section-spacing
{
    padding-bottom: 30px;
}

.message-label, .initial-message
{
    padding-left: 10px;
    -unity-font-style: bold;
    color: aqua;
}

/* CSV button styles ============================================== */

.csv-buttons
{
    width: 200px;
}

/* summary label styles ============================================== */

.summary-label-content
{
    padding-left: 10px;
    -unity-font-definition: resource("Fonts/RobotoMono/RobotoMono-Regular.ttf");
    width: 90%;
}

