.section-spacing
{
    padding-bottom: 30px;
}

.initial-message
{
    padding: 10px;
}

.message-label, .initial-message
{
    padding-left: 10px;
    -unity-font-style: bold;
    color: aqua;
}

/* Culture setting styles ============================================== */

#CultureField
{
    width: 300px;
    padding-bottom: 10px;
}

/* CSV button styles ============================================== */

.csv-buttons
{
    width: 200px;
}

/* summary label styles ============================================== */

.summary-label-content
{
    padding-left: 10px;
    -unity-font-definition: resource("Fonts/RobotoMono/RobotoMono-Regular.ttf");
    width: 90%;
}

